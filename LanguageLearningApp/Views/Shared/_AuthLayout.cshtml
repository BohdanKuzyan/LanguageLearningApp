<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LanguageLearningApp</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="literki min-h-screen flex flex-col justify-between overflow-hidden">

    <main role="main" class="flex-grow flex items-center justify-center relative z-10">
        @RenderBody()
    </main>

    <footer class="w-full py-4 bg-white text-gray-600 z-10">
        <div class="container mx-auto text-center">
            &copy; 2024 - LanguageLearningApp - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-blue-500 hover:underline">Privacy</a>
        </div>
    </footer>
    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
