<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LanguageLearningApp</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LanguageLearningApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
</head>
<body class="min-h-screen bg-gray-100 flex flex-col">
    <header class="bg-white border-b shadow mb-4">
        <nav class="container mx-auto px-4 py-4 flex items-center justify-between">
            <div>
                <a class="text-xl font-bold text-gray-900" asp-area="" asp-controller="Home" asp-action="Index">LanguageLearningApp</a>
            </div>
            <div class="block lg:hidden">
                <button class="text-gray-900 focus:outline-none focus:ring-2 focus:ring-gray-900" type="button" aria-label="Toggle navigation">
                    <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
                    </svg>
                </button>
            </div>
            <div class="hidden lg:flex lg:items-center lg:space-x-6">
                <a class="text-gray-900 hover:text-gray-700" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                <a class="text-gray-900 hover:text-gray-700" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                @if (User.Identity.IsAuthenticated)
                {
                    <form asp-controller="User" asp-action="Logout" method="post" class="inline">
                        <button type="submit" class="text-gray-900 hover:text-gray-700 ml-4">Logout</button>
                    </form>
                }
            </div>
        </nav>
    </header>
    
    <div class="container mx-auto px-4 flex-grow">
        <main role="main" class="py-6">
            @RenderBody()
        </main>
    </div>

    <footer class="border-t mt-6 py-4 bg-white text-gray-600">
        <div class="container mx-auto text-center">
            &copy; 2024 - LanguageLearningApp - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-blue-500 hover:underline">Privacy</a>
        </div>
    </footer>
    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
