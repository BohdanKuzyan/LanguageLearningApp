@{
    ViewBag.Title = "Login";
}

<div class="container mx-auto px-4">
    <h1 class="text-3xl font-bold">Login</h1>
    @using (Html.BeginForm())
    {
        <div class="mb-4">
            @Html.Label("Username", "Username", new { @class = "block text-sm font-medium text-gray-700" })
            @Html.TextBox("username", null, new { @class = "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" })
        </div>
        <div class="mb-4">
            @Html.Label("Password", "Password", new { @class = "block text-sm font-medium text-gray-700" })
            @Html.Password("password", null, new { @class = "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" })
        </div>
        <button type="submit" class="px-4 py-2 bg-blue-500 text-white rounded">Login</button>
        @Html.ValidationSummary(true, "", new { @class = "text-red-500 text-sm" })
    }
</div>