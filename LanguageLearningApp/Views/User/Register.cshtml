@model User
@{
    ViewBag.Title = "Register";
}

<div class="container mx-auto px-4">
    <h1 class="text-3xl font-bold">Register</h1>
    @using (Html.BeginForm())
    {
        <div class="mb-4">
            @Html.LabelFor(model => model.Username, new { @class = "block text-sm font-medium text-gray-700" })
            @Html.TextBoxFor(model => model.Username, new { @class = "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" })
            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-red-500 text-sm" })
        </div>
        <div class="mb-4">
            @Html.LabelFor(model => model.Password, new { @class = "block text-sm font-medium text-gray-700" })
            @Html.PasswordFor(model => model.Password, new { @class = "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-red-500 text-sm" })
        </div>
        <button type="submit" class="px-4 py-2 bg-blue-500 text-white rounded">Register</button>
    }
</div>